@using System.Web.Mvc;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Funemag - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <a href="@Url.Action("Index","Home")">
            <img src="~/Content/Images/logo.png" style="height:50px;padding-right:15px;" />
        </a>
        <a href="@Url.Action("Index","Home")" style="text-decoration:none;">
            <div id="app-title">Funemag</div>
        </a>
        @Html.Partial("_LoginPartial")
</header>
    @Html.Partial("_Menu")
    <div id="content" class="container body-content">
        <br />
        <main>
            @RenderBody()
        </main>
    </div>
    <footer>
            &copy; @DateTime.Now.Year - Funemag
            <div style="margin-left: auto;">
                <a href="mailto:contact@funemag.us"><i class="fa fa-envelope"></i></a>
            </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/tinymce")
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        tinymce.init({
            selector: ".text-editor",
            plugins: [
                "advlist autolink lists link image charmap print preview anchor",
                "searchreplace visualblocks code fullscreen",
                "insertdatetime media table contextmenu paste"
            ],
            toolbar: "insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image"
        });
    </script>
</body>
</html>
